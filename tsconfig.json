
{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
    },
    "typeAcquisition": {
        "include": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}